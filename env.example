# 本地开发时可设置 KUBECONFIG；在 k8s Pod 内部署时通常不需要
export KUBECONFIG=$HOME/.kube/config

# 命名空间配置
export CONTROL_NAMESPACE=liteboxd-system
export SANDBOX_NAMESPACE=liteboxd-sandbox

# 本地开发模式可开启 apiserver proxy
export DEV_USE_K8S_PROXY=true

# 沙箱访问令牌加密（必须设置）
export SANDBOX_TOKEN_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef
export SANDBOX_TOKEN_ENCRYPTION_KEY_ID=v1

# 沙箱元数据保留天数（默认 7）
export SANDBOX_METADATA_RETENTION_DAYS=7

# 日志配置（本地开发推荐）
export LOG_LEVEL=debug
export LOG_FORMAT=text
export LOG_OUTPUT=stdout,file
export LOG_FILE_PATH=./logs/liteboxd.log
export LOG_FILE_MAX_SIZE_MB=100
export LOG_FILE_MAX_BACKUPS=7
export LOG_FILE_MAX_AGE_DAYS=7
